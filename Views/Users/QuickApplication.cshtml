@model Web2Project.ViewModels.Users.QuickApplicationVM
@{
    this.Layout = "/Views/_Site.cshtml";
    ViewData["title"] = "QuickApplication";
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="/css/UserViewExp.css" />
    <link rel="stylesheet" href="/css/LoginNo1.css" />
    <link rel="stylesheet" href="/css/QApp.css"/>
</head>

<body>
  
    <div style="display:grid" class="registerDiv">
   //form action users/createVM  ??
        <form action="/Users/Create" method="post" class="loginForm">
            
            <div class="grid">

                <div class="loginDivs">
                    <label for="FirstName" style="color:#aaffff;">
                        @Html.DisplayName("First Name")
                    </label>
                    <input type="text" name="FirstName" class="inputUP"><br>
                </div>

                <div class="loginDivs">
                    <label for="LastName" style="color:#aaffff;">
                        @Html.DisplayName("Last Name")
                    </label>
                    <input type="text" name="LastName" class="inputUP"><br>
                </div>

                <div class="loginDivs">
                    <label for="EmailAddress" style="color:#aaffff;">
                        @Html.DisplayName("Email Address")
                    </label>
                    <input type="text" name="EmailAddress" class="inputUP"><br>
                </div>

                <div class="loginDivs">
                    <label for="PhoneNumber" style="color:#aaffff;">
                        @Html.DisplayName("Phone Number")
                    </label>
                    <input type="text" name="PhoneNumber" class="inputUP"><br>
                </div>

                <div class="loginDivs">
                <label for="JobName" style="color:#aaffff;">Select a job to apply for:</label>
                <select name="JobName" class="select">
                    <option value="MetaLand">MetaLand</option>
                    <option value="SoftServe">SoftServe</option>
                    <option value="StackSlave">StackSlave</option>
                    <option value="CyberFolk">CyberFolk</option>
                    <option value="TechNo">TechNo</option>
                    <option value="WebDe">WebDe</option>
                </select>
                </div><br>

                <div class="checkholder">
                <div class="chkbox">
                    <input type="checkbox" name="SkillName" value="CSS">
                    <label for="SkillName" style="color:#aaffff;"> CSS  </label>

                    <input type="checkbox" name="SkillName" value="Java">
                    <label for="SkillName" style="color:#aaffff;"> Java </label>

                        <input type="checkbox" name="SkillName" value="JS">
                        <label for="SkillName" style="color:#aaffff;"> JS </label>

                    <input type="checkbox" name="SkillName" value="Python">
                    <label for="SkillName" style="color:#aaffff;"> Python </label>
                </div>
                <div class="chkbox">
                        <input type="checkbox" name="SkillName" value="C++">
                    <label for="SkillName" style="color:#aaffff;"> C++ </label>

                        <input type="checkbox" name="SkillName" value="HTML">
                    <label for="SkillName" style="color:#aaffff;"> HTML </label>

                        <input type="checkbox" name="SkillName" value="C#">
                    <label for="SkillName" style="color:#aaffff;"> C# </label>

                    <input type="checkbox" name="SkillName" value="Swift">
                    <label for="SkillName" style="color:#aaffff;"> Swift </label>
                </div><br>
                </div>

                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-2" style="display:grid; margin-top:25px">
                        <input class="loginButton" type="submit" value="Save" style="height: 25px;" />
                    </div>
                </div>
            </div>
        </form>

    </div>
</body>